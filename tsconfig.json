{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": ["__test__", "jest.config.ts"]
}
